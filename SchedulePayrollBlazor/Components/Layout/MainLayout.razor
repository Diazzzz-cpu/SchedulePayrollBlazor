@inherits LayoutComponentBase

<div class="app-shell">
    <AuthorizeView>
        <Authorized>
            <aside class="app-sidebar">
                <div class="app-brand">
                    <span class="app-title">SchedulePayrollBlazor</span>
                    <span class="app-subtitle">Scheduler & Payroll</span>
                </div>

                <NavMenu />
            </aside>
        </Authorized>
        <NotAuthorized>
            <aside class="app-sidebar guest-sidebar">
                <div class="app-brand">
                    <span class="app-title">SchedulePayrollBlazor</span>
                    <span class="app-subtitle">Please sign in</span>
                </div>

                <nav class="side-nav">
                    <NavLink href="/login" class="side-link" activeClass="active">Login</NavLink>
                </nav>
            </aside>
        </NotAuthorized>
    </AuthorizeView>

    <main class="app-main">
        <header class="app-topbar">
            <span>Welcome to SchedulePayrollBlazor</span>
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </header>

        <section class="app-content">
            @Body
        </section>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
