@code {
    private bool isAuthenticated;
    private bool isAdmin;
    private string? displayName;
    private string? roleLabel;

    protected override async Task OnInitializedAsync()
    {
        await LoadFromAuthStateAsync();
        Auth.AuthenticationStateChanged += OnAuthenticationStateChanged;
    }

    private async Task LoadFromAuthStateAsync()
    {
        var state = await Auth.GetAuthenticationStateAsync();
        var user = state.User;

        isAuthenticated = user.Identity?.IsAuthenticated ?? false;

        if (!isAuthenticated)
        {
            isAdmin = false;
            displayName = "Guest";
            roleLabel = "Not signed in";
            return;
        }

        var roleValue = user.FindFirst(ClaimTypes.Role)?.Value;
        roleLabel = string.IsNullOrWhiteSpace(roleValue) ? "Employee" : roleValue;
        isAdmin = string.Equals(roleLabel, "Admin", StringComparison.OrdinalIgnoreCase);
        displayName = user.Identity?.Name ?? user.FindFirst(ClaimTypes.Email)?.Value ?? "User";
    }

    private async void OnAuthenticationStateChanged(Task<AuthenticationState> task)
    {
        var _ = await task;
        await LoadFromAuthStateAsync();
        await InvokeAsync(StateHasChanged);
    }

    private async Task Logout()
    {
        await Auth.SignOutAsync();
        await LoadFromAuthStateAsync();
        Nav.NavigateTo("/login", forceLoad: true);
    }

    public void Dispose()
    {
        Auth.AuthenticationStateChanged -= OnAuthenticationStateChanged;
    }
}
