@using Microsoft.AspNetCore.Components.Authorization
@using System
@using System.Security.Claims
@inject SimpleAuthStateProvider Auth
@inject NavigationManager Nav
@implements IDisposable

<nav class="ps-nav">
    <div class="ps-nav-user">
        <span class="ps-nav-name">@(isAuthenticated ? displayName : "Welcome")</span>
        <span class="ps-nav-role">@(isAuthenticated ? roleLabel : "Please sign in")</span>
    </div>

    @if (!isAuthenticated)
    {
        <div class="ps-nav-section">
            <ul class="ps-nav-list">
                <li>
                    <NavLink href="/login" class="ps-nav-link" activeClass="active">Login</NavLink>
                </li>
            </ul>
        </div>
    }
    else if (isAdmin)
    {
        <div class="ps-nav-section">
            <span class="ps-nav-section-title">Management</span>
            <ul class="ps-nav-list">
                <li>
                    <NavLink href="/admindashboard" class="ps-nav-link" activeClass="active" Match="NavLinkMatch.Prefix">Dashboard</NavLink>
                </li>
                <li>
                    <NavLink href="/employees" class="ps-nav-link" activeClass="active">Employees</NavLink>
                </li>
                <li>
                    <NavLink href="/attendance" class="ps-nav-link" activeClass="active">Attendance</NavLink>
                </li>
                <li>
                    <NavLink href="/schedules" class="ps-nav-link" activeClass="active">Schedules</NavLink>
                </li>
                <li>
                    <NavLink href="/admin/payroll" class="ps-nav-link" activeClass="active">Payroll runs</NavLink>
                </li>
                <li>
                    <NavLink href="/admin/pay-structure" class="ps-nav-link" activeClass="active">Pay structure</NavLink>
                </li>
            </ul>
        </div>
        <div class="ps-nav-section">
            <span class="ps-nav-section-title">Account</span>
            <ul class="ps-nav-list">
                <li>
                    <NavLink href="/settings" class="ps-nav-link" activeClass="active">Settings</NavLink>
                </li>
                <li>
                    <NavLink href="/profile" class="ps-nav-link" activeClass="active">Profile</NavLink>
                </li>
            </ul>
        </div>
    }
    else
    {
        <div class="ps-nav-section">
            <span class="ps-nav-section-title">My PaySync</span>
            <ul class="ps-nav-list">
                <li>
                    <NavLink href="/userdashboard" class="ps-nav-link" activeClass="active" Match="NavLinkMatch.Prefix">Dashboard</NavLink>
                </li>
                <li>
                    <NavLink href="/my-schedule" class="ps-nav-link" activeClass="active">My Schedule</NavLink>
                </li>
                <li>
                    <NavLink href="/my-attendance" class="ps-nav-link" activeClass="active">My Attendance</NavLink>
                </li>
                <li>
                    <NavLink href="/mypayroll" class="ps-nav-link" activeClass="active">My Payroll</NavLink>
                </li>
            </ul>
        </div>
        <div class="ps-nav-section">
            <span class="ps-nav-section-title">Account</span>
            <ul class="ps-nav-list">
                <li>
                    <NavLink href="/settings" class="ps-nav-link" activeClass="active">Settings</NavLink>
                </li>
                <li>
                    <NavLink href="/profile" class="ps-nav-link" activeClass="active">Profile</NavLink>
                </li>
            </ul>
        </div>
    }

    @if (isAuthenticated)
    {
        <button class="btn btn-outline-secondary w-100 ps-nav-logout" @onclick="Logout">Sign out</button>
    }
</nav>

@code {
    private bool isAuthenticated;
    private bool isAdmin;
    private string? displayName;
    private string? roleLabel;

    protected override async Task OnInitializedAsync()
    {
        await LoadFromAuthStateAsync();
        Auth.AuthenticationStateChanged += OnAuthenticationStateChanged;
    }

    private async Task LoadFromAuthStateAsync()
    {
        var state = await Auth.GetAuthenticationStateAsync();
        var user = state.User;

        isAuthenticated = user.Identity?.IsAuthenticated ?? false;

        if (!isAuthenticated)
        {
            isAdmin = false;
            displayName = "Guest";
            roleLabel = "Not signed in";
            return;
        }

        var roleValue = user.FindFirst(ClaimTypes.Role)?.Value;
        roleLabel = string.IsNullOrWhiteSpace(roleValue) ? "Employee" : roleValue;
        isAdmin = string.Equals(roleLabel, "Admin", StringComparison.OrdinalIgnoreCase);
        displayName = user.Identity?.Name ?? user.FindFirst(ClaimTypes.Email)?.Value ?? "User";
    }

    private async void OnAuthenticationStateChanged(Task<AuthenticationState> task)
    {
        var _ = await task;
        await LoadFromAuthStateAsync();
        await InvokeAsync(StateHasChanged);
    }

    private async Task Logout()
    {
        await Auth.SignOutAsync();
        await LoadFromAuthStateAsync();
        Nav.NavigateTo("/login", forceLoad: true);
    }

    public void Dispose()
    {
        Auth.AuthenticationStateChanged -= OnAuthenticationStateChanged;
    }
}
