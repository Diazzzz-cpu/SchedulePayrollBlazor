@page "/admindashboard"
@attribute [Authorize(Roles = "Admin")]
@inject AppDbContext Db
@using Microsoft.EntityFrameworkCore
@using SchedulePayrollBlazor.Data.Models

<div class="page">
    <header class="page-header">
        <div>
            <h1 class="page-title">Admin Dashboard</h1>
            <p class="page-subtitle">Monitor workforce activity and payroll at a glance.</p>
        </div>
    </header>

    <section class="metric-grid">
        <div class="metric-card blue">
            <div class="metric-icon">üë•</div>
            <div class="metric-content">
                <h3>@totalEmployees</h3>
                <p>Total Employees</p>
            </div>
        </div>

        <div class="metric-card purple">
            <div class="metric-icon">üìÖ</div>
            <div class="metric-content">
                <h3>@todaySchedules</h3>
                <p>Today's Shifts</p>
            </div>
        </div>

        <div class="metric-card orange">
            <div class="metric-icon">‚è≠Ô∏è</div>
            <div class="metric-content">
                <h3>@upcomingSchedules</h3>
                <p>Shifts Next 7 Days</p>
            </div>
        </div>

        <div class="metric-card green">
            <div class="metric-icon">üí∞</div>
            <div class="metric-content">
                <h3>@activePayrolls</h3>
                <p>Open Payroll Runs</p>
            </div>
        </div>
    </section>

    <section class="content-card">
        <div class="card-header">
            <h3>Quick Actions</h3>
            <p>Jump directly into the most common workflows.</p>
        </div>
        <div class="quick-actions">
            <a href="/employees" class="quick-card">
                <div class="quick-icon">üë§</div>
                <h4>Employees</h4>
                <p>Review and maintain employee records</p>
            </a>
            <a href="/schedules" class="quick-card">
                <div class="quick-icon">üìÜ</div>
                <h4>Schedules</h4>
                <p>Plan and edit team schedules</p>
            </a>
            <a href="/payroll" class="quick-card">
                <div class="quick-icon">üíµ</div>
                <h4>Payroll</h4>
                <p>Track payroll progress</p>
            </a>
            <a href="/settings" class="quick-card">
                <div class="quick-icon">‚öôÔ∏è</div>
                <h4>Settings</h4>
                <p>Manage company configuration</p>
            </a>
        </div>
    </section>

    <section class="content-card">
        <div class="card-header">
            <h3>Recent Hires</h3>
            <p>Latest additions to your team.</p>
        </div>
        <div class="table-responsive">
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Department</th>
                        <th>Job Title</th>
                        <th>Employment Type</th>
                        <th>Start Date</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var employee in recentEmployees)
                    {
                        <tr>
                            <td>@employee.FullName</td>
                            <td>@employee.User.Email</td>
                            <td>@employee.Department</td>
                            <td>@employee.JobTitle</td>
                            <td>@employee.EmploymentType</td>
                            <td>
                                @(
                                    employee.StartDate.HasValue
                                        ? employee.StartDate.Value.ToString("MMM dd, yyyy")
                                        : "-"
                                )
                            </td>
                            <td>
                                <span class="badge @(employee.IsActive ? "badge-success" : "badge-danger")">
                                    @(employee.IsActive ? "Active" : "Inactive")
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>

    <section class="content-card">
        <div class="card-header">
            <h3>Recent Payroll Activity</h3>
            <p>Last five payroll events across the organization.</p>
        </div>
        @if (recentPayrollRuns.Count == 0)
        {
            <div class="alert alert-info">No payroll runs recorded yet.</div>
        }
        else
        {
            <div class="table-responsive">
                <table>
                    <thead>
                        <tr>
                            <th>Employee</th>
                            <th>Period</th>
                            <th>Net Pay</th>
                            <th>Status</th>
                            <th>Processed</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var run in recentPayrollRuns)
                        {
                            <tr>
                                <td>@run.Employee.FullName</td>
                                <td>@(run.PayPeriod?.PeriodName ?? "Ad hoc")</td>
                                <td>$@run.NetPay.ToString("N2")</td>
                                <td><span class="badge @GetStatusClass(run.Status)">@run.Status</span></td>
                                <td>@run.CreatedAt.ToLocalTime().ToString("MMM dd, yyyy")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </section>
</div>

@code {
    private int totalEmployees;
    private int todaySchedules;
    private int upcomingSchedules;
    private int activePayrolls;
    private List<Employee> recentEmployees = new();
    private List<PayrollRun> recentPayrollRuns = new();

    protected override async Task OnInitializedAsync()
    {
        totalEmployees = await Db.Employees.CountAsync(e => e.IsActive);

        // Use DateTime consistently with Schedule.ShiftDate
        var today = DateTime.Today.Date;

        todaySchedules = await Db.Schedules
            .CountAsync(s => s.EmployeeId != 0 && s.ShiftDate.Date == today);

        var nextWeek = today.AddDays(7);

        upcomingSchedules = await Db.Schedules
            .CountAsync(s => s.EmployeeId != 0 &&
                             s.ShiftDate.Date > today &&
                             s.ShiftDate.Date <= nextWeek);

        activePayrolls = await Db.PayrollRuns
            .CountAsync(p => p.Status == "Pending" || p.Status == "Calculated");

        recentEmployees = await Db.Employees
            .Include(e => e.User)
            .OrderByDescending(e => e.StartDate ?? DateTime.MinValue)
            .Take(5)
            .ToListAsync();

        recentPayrollRuns = await Db.PayrollRuns
            .Include(p => p.Employee)
                .ThenInclude(e => e.User)
            .Include(p => p.PayPeriod)
            .OrderByDescending(p => p.CreatedAt)
            .Take(5)
            .ToListAsync();
    }

    private static string GetStatusClass(string status) => status switch
    {
        "Paid" => "badge-success",
        "Approved" => "badge-info",
        "Calculated" => "badge-warning",
        _ => "badge-secondary"
    };
}
