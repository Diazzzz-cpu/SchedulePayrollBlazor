@page "/admindashboard"
@attribute [Authorize(Roles = "Admin")]
@inject AppDbContext Db
@using Microsoft.EntityFrameworkCore
@using SchedulePayrollBlazor.Data.Models

<div class="ps-page">
    <div class="ps-page-header">
        <div>
            <h2>PaySync Admin Dashboard</h2>
            <p class="ps-subtitle">Monitor workforce activity and payroll at a glance.</p>
        </div>
    </div>

    <div class="ps-stat-grid">
        <div class="ps-stat-card">
            <span class="ps-stat-title">Total employees</span>
            <span class="ps-stat-value">@totalEmployees</span>
        </div>
        <div class="ps-stat-card">
            <span class="ps-stat-title">Today's shifts</span>
            <span class="ps-stat-value">@todaySchedules</span>
        </div>
        <div class="ps-stat-card">
            <span class="ps-stat-title">Next 7 days</span>
            <span class="ps-stat-value">@upcomingSchedules</span>
        </div>
        <div class="ps-stat-card">
            <span class="ps-stat-title">Open payroll runs</span>
            <span class="ps-stat-value">@activePayrolls</span>
        </div>
    </div>

    <section class="ps-card">
        <div class="ps-card-header">
            <h3>Quick actions</h3>
            <p class="ps-subtitle">Jump straight to the pages you use most.</p>
        </div>
        <div class="ps-quick-links">
            <a href="/employees" class="ps-quick-link">
                <span class="ps-quick-title">Employees</span>
                <span class="ps-quick-text">Maintain employee records</span>
            </a>
            <a href="/schedules" class="ps-quick-link">
                <span class="ps-quick-title">Schedules</span>
                <span class="ps-quick-text">Plan and review shifts</span>
            </a>
            <a href="/payroll" class="ps-quick-link">
                <span class="ps-quick-title">Payroll</span>
                <span class="ps-quick-text">Track payroll progress</span>
            </a>
            <a href="/settings" class="ps-quick-link">
                <span class="ps-quick-title">Settings</span>
                <span class="ps-quick-text">Adjust company preferences</span>
            </a>
        </div>
    </section>

    <section class="ps-card">
        <div class="ps-card-header">
            <h3>Recent hires</h3>
            <p class="ps-subtitle">Latest additions to your team.</p>
        </div>
        <div class="ps-table-container">
            <table class="ps-table">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Department</th>
                        <th scope="col">Job title</th>
                        <th scope="col">Employment type</th>
                        <th scope="col">Start date</th>
                        <th scope="col">Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var employee in recentEmployees)
                    {
                        <tr>
                            <td>@employee.FullName</td>
                            <td>@employee.User.Email</td>
                            <td>@employee.Department</td>
                            <td>@employee.JobTitle</td>
                            <td>@FormatEmploymentType(employee.EmploymentType)</td>
                            <td>
                                @(
                                    employee.StartDate.HasValue
                                        ? employee.StartDate.Value.ToString("MMM dd, yyyy")
                                        : "-"
                                )
                            </td>
                            <td>
                                <span class="badge @(employee.IsActive ? "badge-success" : "badge-secondary")">
                                    @(employee.IsActive ? "Active" : "Inactive")
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>

    <section class="ps-card">
        <div class="ps-card-header">
            <h3>Recent payroll activity</h3>
            <p class="ps-subtitle">The five most recent payroll updates.</p>
        </div>
        @if (recentPayrollRuns.Count == 0)
        {
            <div class="text-muted">No payroll runs recorded yet.</div>
        }
        else
        {
            <div class="ps-table-container">
                <table class="ps-table">
                    <thead>
                        <tr>
                            <th scope="col">Employee</th>
                            <th scope="col">Period</th>
                            <th scope="col">Net pay</th>
                            <th scope="col">Status</th>
                            <th scope="col">Processed</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var run in recentPayrollRuns)
                        {
                            <tr>
                                <td>@run.Employee.FullName</td>
                                <td>@(run.PayPeriod?.PeriodName ?? "Ad hoc")</td>
                                <td>$@run.NetPay.ToString("N2")</td>
                                <td>
                                    <span class="badge @GetStatusClass(run.Status)">@run.Status</span>
                                </td>
                                <td>@run.CreatedAt.ToLocalTime().ToString("MMM dd, yyyy")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </section>
</div>

@code {
    private int totalEmployees;
    private int todaySchedules;
    private int upcomingSchedules;
    private int activePayrolls;
    private List<Employee> recentEmployees = new();
    private List<PayrollRun> recentPayrollRuns = new();

    protected override async Task OnInitializedAsync()
    {
        totalEmployees = await Db.Employees.CountAsync(e => e.IsActive);

        var today = DateTime.Today.Date;

        todaySchedules = await Db.Schedules
            .CountAsync(s => s.EmployeeId != 0 && s.ShiftDate.Date == today);

        var nextWeek = today.AddDays(7);

        upcomingSchedules = await Db.Schedules
            .CountAsync(s => s.EmployeeId != 0 &&
                             s.ShiftDate.Date > today &&
                             s.ShiftDate.Date <= nextWeek);

        activePayrolls = await Db.PayrollRuns
            .CountAsync(p => p.Status == "Pending" || p.Status == "Calculated");

        recentEmployees = await Db.Employees
            .Include(e => e.User)
            .OrderByDescending(e => e.StartDate ?? DateTime.MinValue)
            .Take(5)
            .ToListAsync();

        recentPayrollRuns = await Db.PayrollRuns
            .Include(p => p.Employee)
                .ThenInclude(e => e.User)
            .OrderByDescending(p => p.CreatedAt)
            .Take(5)
            .ToListAsync();
    }

    private static string FormatEmploymentType(EmploymentType type)
        => type switch
        {
            EmploymentType.FullTime => "Full-time",
            EmploymentType.PartTime => "Part-time",
            EmploymentType.Contractor => "Contractor",
            EmploymentType.Intern => "Intern",
            _ => type.ToString()
        };

    private static string GetStatusClass(string? status)
        => status switch
        {
            "Completed" => "badge-success",
            "Calculated" => "badge-warning",
            "Pending" => "badge-warning",
            "Failed" => "badge-danger",
            _ => "badge-secondary"
        };
}
