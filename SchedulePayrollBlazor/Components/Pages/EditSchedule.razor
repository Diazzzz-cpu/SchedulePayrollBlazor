@page "/schedules/edit/{id:int}"
@attribute [Authorize(Roles = "Admin")]
@inject AppDbContext Db
@inject NavigationManager Nav
@using System.Globalization
@using Microsoft.EntityFrameworkCore
@using SchedulePayrollBlazor.Data.Models

<div class="page">
    <header class="page-header">
        <div>
            <h1 class="page-title">Edit Schedule</h1>
            <p class="page-subtitle">Adjust the shift details for this assignment.</p>
        </div>
        <div class="page-actions">
            <a class="btn btn-outline" href="/schedules">Back to schedules</a>
        </div>
    </header>

    @if (vm is null)
    {
        <div class="content-card">
            <div class="loading">Loadingâ€¦</div>
        </div>
    }
    else
    {
        <section class="content-card">
            <div class="card-header">
                <h3>Shift Details</h3>
                <p>Update the assigned employee, timing, or source.</p>
            </div>
            <EditForm Model="vm" OnValidSubmit="Save" FormName="EditScheduleForm">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="form-group">
                    <label>Employee</label>
                    <select value="@vm.EmployeeId" @onchange="OnEmpChanged">
                        @foreach (var e in employees)
                        {
                            <option value="@e.EmployeeId">@e.FullName (@e.User.Email)</option>
                        }
                    </select>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label>Date</label>
                        <input type="date" value="@vm.ShiftDateText" @onchange="OnDateChanged" />
                    </div>
                    <div class="form-group">
                        <label>Start</label>
                        <input type="time" value="@vm.StartTimeText" step="60" @onchange="OnStartChanged" />
                    </div>
                    <div class="form-group">
                        <label>End</label>
                        <input type="time" value="@vm.EndTimeText" step="60" @onchange="OnEndChanged" />
                    </div>
                </div>

                <div class="form-group">
                    <label>Source</label>
                    <select value="@vm.Source" @onchange="OnSourceChanged">
                        <option>Manual</option>
                        <option>Auto</option>
                    </select>
                </div>

                @if (!string.IsNullOrWhiteSpace(vm.FormError))
                {
                    <div class="alert alert-danger">@vm.FormError</div>
                }

                <div class="form-actions">
                    <button class="btn btn-primary" type="submit">Save Changes</button>
                    <a class="btn btn-secondary" href="/schedules">Cancel</a>
                </div>
            </EditForm>
        </section>
    }
</div>

@code {
    [Parameter] public int id { get; set; }
    private List<Employee> employees = new();
    private ScheduleVm? vm;

    private Task OnDateChanged(ChangeEventArgs e)
    {
        vm!.ShiftDateText = e?.Value?.ToString() ?? vm.ShiftDateText;
        return Task.CompletedTask;
    }

    private Task OnStartChanged(ChangeEventArgs e)
    {
        vm!.StartTimeText = e?.Value?.ToString() ?? vm.StartTimeText;
        return Task.CompletedTask;
    }

    private Task OnEndChanged(ChangeEventArgs e)
    {
        vm!.EndTimeText = e?.Value?.ToString() ?? vm.EndTimeText;
        return Task.CompletedTask;
    }

    private Task OnSourceChanged(ChangeEventArgs e)
    {
        vm!.Source = e?.Value?.ToString() ?? vm.Source;
        return Task.CompletedTask;
    }

    protected override async Task OnInitializedAsync()
    {
        employees = await Db.Employees
            .Include(e => e.User)
            .OrderBy(e => e.User.LastName)
            .ThenBy(e => e.User.FirstName)
            .ToListAsync();

        var schedule = await Db.Schedules.FirstOrDefaultAsync(x => x.ScheduleId == id);
        if (schedule is null)
        {
            Nav.NavigateTo("/schedules");
            return;
        }

        vm = new ScheduleVm
        {
            ScheduleId = schedule.ScheduleId,
            EmployeeId = schedule.EmployeeId,
            ShiftDateText = schedule.ShiftDate.ToString("yyyy-MM-dd"),
            StartTimeText = schedule.StartTime.ToString("hh\\:mm"),
            EndTimeText = schedule.EndTime.ToString("hh\\:mm"),
            Source = schedule.Source ?? "Manual"
        };
    }

    private Task OnEmpChanged(ChangeEventArgs e)
    {
        if (int.TryParse(e?.Value?.ToString(), out var employeeId))
        {
            vm!.EmployeeId = employeeId;
        }
        return Task.CompletedTask;
    }

    private async Task Save()
    {
        vm!.FormError = null;

        if (vm.EmployeeId == 0 || employees.All(e => e.EmployeeId != vm.EmployeeId))
        {
            vm.FormError = "Select a valid employee.";
            return;
        }

        if (!DateTime.TryParseExact(vm.ShiftDateText, "yyyy-MM-dd", CultureInfo.InvariantCulture, DateTimeStyles.None, out var date))
        {
            vm.FormError = "Enter a valid shift date.";
            return;
        }

        if (!TimeSpan.TryParseExact(vm.StartTimeText, "hh\\:mm", CultureInfo.InvariantCulture, out var start))
        {
            vm.FormError = "Enter a valid start time.";
            return;
        }

        if (!TimeSpan.TryParseExact(vm.EndTimeText, "hh\\:mm", CultureInfo.InvariantCulture, out var end))
        {
            vm.FormError = "Enter a valid end time.";
            return;
        }

        if (end <= start)
        {
            vm.FormError = "End time must be after start time.";
            return;
        }

        // Compare DateTime to DateTime, TimeSpan to TimeSpan
        var overlap = await Db.Schedules
            .AnyAsync(s =>
                s.EmployeeId == vm.EmployeeId
                && s.ShiftDate.Date == date.Date
                && s.ScheduleId != vm.ScheduleId
                && !(end <= s.StartTime || start >= s.EndTime));

        if (overlap)
        {
            vm.FormError = "Shift overlaps with an existing schedule.";
            return;
        }

        var entity = await Db.Schedules.FindAsync(vm.ScheduleId);
        if (entity is null)
        {
            vm.FormError = "The schedule could not be found. Refresh the list and try again.";
            return;
        }
        entity.EmployeeId = vm.EmployeeId;
        entity.ShiftDate = date;
        entity.StartTime = start;
        entity.EndTime = end;
        entity.Source = string.IsNullOrWhiteSpace(vm.Source) ? "Manual" : vm.Source;

        await Db.SaveChangesAsync();
        Nav.NavigateTo("/schedules", forceLoad: true);
    }

    private class ScheduleVm
    {
        public int ScheduleId { get; set; }
        public int EmployeeId { get; set; }
        public string ShiftDateText { get; set; } = DateTime.Today.ToString("yyyy-MM-dd");
        public string StartTimeText { get; set; } = "08:00";
        public string EndTimeText { get; set; } = "17:00";
        public string? Source { get; set; } = "Manual";
        public string? FormError { get; set; }
    }
}
