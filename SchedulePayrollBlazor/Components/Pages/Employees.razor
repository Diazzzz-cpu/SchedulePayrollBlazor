@page "/employees"
@attribute [Authorize(Roles = "Admin")]
@inject IEmployeeService EmployeeService
@inject AdminUserService UserService
@using Microsoft.AspNetCore.Components.Authorization
@using SchedulePayrollBlazor.Components.Pages.Models
@using SchedulePayrollBlazor.Data.Models

<div class="ps-page">
    <div class="ps-page-header">
        <div>
            <h2>Employees</h2>
            <p class="ps-subtitle">Manage employee records and workforce details.</p>
        </div>
        <div class="ps-page-actions">
            <button class="btn btn-primary" type="button" @onclick="OpenAddEmployeeDialog">Add employee</button>
        </div>
    </div>

    @if (!string.IsNullOrWhiteSpace(pageSuccessMessage))
    {
        <div class="ps-alert ps-alert-success" role="status">
            <div>
                <strong>Success:</strong> @pageSuccessMessage
                @if (!string.IsNullOrWhiteSpace(generatedPassword))
                {
                    <div class="ps-alert-note">
                        Temporary password: <code>@generatedPassword</code>
                    </div>
                }
            </div>
            <button type="button" class="ps-alert-close" @onclick="() => DismissAlert(true)" aria-label="Dismiss success message">&times;</button>
        </div>
    }

    @if (!string.IsNullOrWhiteSpace(pageErrorMessage))
    {
        <div class="ps-alert ps-alert-danger" role="alert">
            <div>
                <strong>Error:</strong> @pageErrorMessage
            </div>
            <button type="button" class="ps-alert-close" @onclick="() => DismissAlert(false)" aria-label="Dismiss error message">&times;</button>
        </div>
    }

    @if (employees is null)
    {
        <div class="ps-card">
            <div class="loading">Loading…</div>
        </div>
    }
    else if (employees.Count == 0)
    {
        <div class="ps-card">
            <div class="text-muted">No employees have been added yet.</div>
        </div>
    }
    else
    {
        var activeEmployees = employees.Where(e => e.IsActive).ToList();
        var inactiveEmployees = employees.Where(e => !e.IsActive).ToList();

        <section class="ps-card">
            <div class="ps-card-header">
                <h3>Active employees</h3>
                <p class="ps-subtitle">Team members with access enabled.</p>
            </div>
            @if (activeEmployees.Count == 0)
            {
                <div class="ps-table-container">
                    <div class="text-muted">No active employees.</div>
                </div>
            }
            else
            {
                <div class="ps-table-container">
                    <table class="ps-table">
                        <thead>
                            <tr>
                                <th scope="col">Name</th>
                                <th scope="col">Email</th>
                                <th scope="col">Department</th>
                                <th scope="col">Job title</th>
                                <th scope="col">Employment type</th>
                                <th scope="col">Start date</th>
                                <th scope="col">Status</th>
                                @if (_isAdmin)
                                {
                                    <th scope="col" class="text-end">Actions</th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var employee in activeEmployees)
                            {
                                <tr>
                                    <td>@employee.FullName</td>
                                    <td>@employee.User?.Email</td>
                                    <td>@(string.IsNullOrWhiteSpace(employee.Department) ? "-" : employee.Department)</td>
                                    <td>@(string.IsNullOrWhiteSpace(employee.JobTitle) ? "-" : employee.JobTitle)</td>
                                    <td>@FormatEmploymentType(employee.EmploymentType)</td>
                                    <td>
                                        @(
                                            employee.StartDate.HasValue
                                                ? employee.StartDate.Value.ToString("MMM dd, yyyy")
                                                : "-"
                                        )
                                    </td>
                                    <td>
                                        <span class="badge badge-success">Active</span>
                                    </td>
                                    @if (_isAdmin)
                                    {
                                        <td class="ps-table-actions">
                                            <button class="ps-button ps-button-ghost" type="button" @onclick="() => BeginEditAsync(employee.EmployeeId)">
                                                Edit
                                            </button>
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </section>

        <section class="ps-card">
            <div class="ps-card-header">
                <h3>Inactive employees</h3>
                <p class="ps-subtitle">Archived or disabled accounts.</p>
            </div>
            @if (inactiveEmployees.Count == 0)
            {
                <div class="ps-table-container">
                    <div class="text-muted">No inactive employees.</div>
                </div>
            }
            else
            {
                <div class="ps-table-container">
                    <table class="ps-table">
                        <thead>
                            <tr>
                                <th scope="col">Name</th>
                                <th scope="col">Email</th>
                                <th scope="col">Department</th>
                                <th scope="col">Job title</th>
                                <th scope="col">Employment type</th>
                                <th scope="col">Start date</th>
                                <th scope="col">Status</th>
                                @if (_isAdmin)
                                {
                                    <th scope="col" class="text-end">Actions</th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var employee in inactiveEmployees)
                            {
                                <tr>
                                    <td>@employee.FullName</td>
                                    <td>@employee.User?.Email</td>
                                    <td>@(string.IsNullOrWhiteSpace(employee.Department) ? "-" : employee.Department)</td>
                                    <td>@(string.IsNullOrWhiteSpace(employee.JobTitle) ? "-" : employee.JobTitle)</td>
                                    <td>@FormatEmploymentType(employee.EmploymentType)</td>
                                    <td>
                                        @(
                                            employee.StartDate.HasValue
                                                ? employee.StartDate.Value.ToString("MMM dd, yyyy")
                                                : "-"
                                        )
                                    </td>
                                    <td>
                                        <span class="badge badge-secondary">Inactive (Archived)</span>
                                    </td>
                                    @if (_isAdmin)
                                    {
                                        <td class="ps-table-actions">
                                            <button class="ps-button ps-button-ghost" type="button" @onclick="() => BeginEditAsync(employee.EmployeeId)">
                                                Edit
                                            </button>
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </section>
    }

    @if (showAddEmployeeDialog)
    {
        <div class="ps-modal-backdrop" role="presentation">
            <div class="ps-modal" role="dialog" aria-modal="true" aria-labelledby="addEmployeeTitle">
                <div class="ps-modal-header">
                    <div>
                        <h3 id="addEmployeeTitle">Add employee</h3>
                        <p class="ps-subtitle">Create a new workforce account and linked employee record.</p>
                    </div>
                    <button type="button" class="ps-modal-close" @onclick="CloseAddEmployeeDialog" aria-label="Close add employee dialog">&times;</button>
                </div>
                <div class="ps-modal-body">
                    <EditForm Model="createModel" OnValidSubmit="HandleCreateEmployeeAsync">
                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        @if (!string.IsNullOrWhiteSpace(dialogError))
                        {
                            <div class="ps-alert ps-alert-danger" role="alert">
                                <div>@dialogError</div>
                            </div>
                        }

                        <div class="ps-form-grid">
                            <div class="form-group">
                                <label for="employee-email">Email</label>
                                <InputText id="employee-email" class="form-control" @bind-Value="createModel.Email" type="email" autocomplete="email" />
                                <ValidationMessage For="() => createModel.Email" />
                            </div>
                            <div class="form-group">
                                <label for="employee-role">Role</label>
                                <InputSelect id="employee-role" class="form-select" @bind-Value="createModel.Role">
                                    @foreach (var option in roleOptions)
                                    {
                                        <option value="@option">@option</option>
                                    }
                                </InputSelect>
                                <ValidationMessage For="() => createModel.Role" />
                            </div>
                        </div>

                        <div class="ps-form-grid">
                            <div class="form-group">
                                <label for="employee-first-name">First name</label>
                                <InputText id="employee-first-name" class="form-control" @bind-Value="createModel.FirstName" autocomplete="given-name" />
                                <ValidationMessage For="() => createModel.FirstName" />
                            </div>
                            <div class="form-group">
                                <label for="employee-last-name">Last name</label>
                                <InputText id="employee-last-name" class="form-control" @bind-Value="createModel.LastName" autocomplete="family-name" />
                                <ValidationMessage For="() => createModel.LastName" />
                            </div>
                        </div>

                        <div class="ps-form-grid">
                            <div class="form-group">
                                <label for="employee-department">Department</label>
                                <InputText id="employee-department" class="form-control" @bind-Value="createModel.Department" autocomplete="organization" />
                            </div>
                            <div class="form-group">
                                <label for="employee-job-title">Job title</label>
                                <InputText id="employee-job-title" class="form-control" @bind-Value="createModel.JobTitle" autocomplete="organization-title" />
                            </div>
                        </div>

                        <div class="ps-form-grid">
                            <div class="form-group">
                                <label for="employee-employment-type">Employment type</label>
                                <InputSelect id="employee-employment-type" class="form-select" @bind-Value="createModel.EmploymentType">
                                    @foreach (var option in employmentTypeOptions)
                                    {
                                        <option value="@option.Value">@option.Label</option>
                                    }
                                </InputSelect>
                            </div>
                            <div class="form-group">
                                <label for="employee-start-date">Start date</label>
                                <InputDate id="employee-start-date" class="form-control" @bind-Value="createModel.StartDate" />
                            </div>
                            <div class="form-group">
                                <label for="employee-location">Location</label>
                                <InputText id="employee-location" class="form-control" @bind-Value="createModel.Location" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="employee-password">Initial password <span class="ps-muted">(leave blank to auto-generate)</span></label>
                            <div class="input-with-button">
                                <InputText id="employee-password" class="form-control" @bind-Value="createModel.Password" type="@CreatePasswordInputType" autocomplete="new-password" />
                                <button type="button" class="btn btn-outline-secondary" @onclick="ToggleCreatePassword" aria-label="Toggle password visibility">
                                    @(createPasswordVisible ? "Hide" : "Show")
                                </button>
                            </div>
                        </div>

                        <div class="ps-form-actions">
                            <button type="submit" class="btn btn-primary" disabled="@isSubmitting">
                                @(isSubmitting ? "Creating…" : "Create employee")
                            </button>
                            <button type="button" class="btn btn-outline-secondary" @onclick="CloseAddEmployeeDialog" disabled="@isSubmitting">
                                Cancel
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    }

    @if (showEditDialog && editModel is not null)
    {
        <div class="ps-modal-backdrop" role="presentation">
            <div class="ps-modal" role="dialog" aria-modal="true" aria-labelledby="editEmployeeTitle">
                <div class="ps-modal-header">
                    <div>
                        <h3 id="editEmployeeTitle">Edit employee</h3>
                        <p class="ps-subtitle">Update employment details and access.</p>
                    </div>
                    <button type="button" class="ps-modal-close" @onclick="CloseEditDialog" aria-label="Close edit employee dialog">&times;</button>
                </div>
                <div class="ps-modal-body">
                    <EditForm Model="editModel" OnValidSubmit="SaveEditAsync">
                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        @if (!string.IsNullOrWhiteSpace(editError))
                        {
                            <div class="ps-alert ps-alert-danger" role="alert">
                                <div>@editError</div>
                            </div>
                        }

                        <div class="ps-form-grid">
                            <div class="form-group">
                                <label>First name</label>
                                <InputText class="form-control" @bind-Value="editModel.FirstName" readonly />
                            </div>
                            <div class="form-group">
                                <label>Last name</label>
                                <InputText class="form-control" @bind-Value="editModel.LastName" readonly />
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Email</label>
                            <InputText class="form-control" @bind-Value="editModel.Email" readonly />
                        </div>

                        <div class="ps-form-grid">
                            <div class="form-group">
                                <label for="edit-department">Department</label>
                                <InputText id="edit-department" class="form-control" @bind-Value="editModel.Department" />
                                <ValidationMessage For="() => editModel.Department" />
                            </div>
                            <div class="form-group">
                                <label for="edit-job-title">Job title</label>
                                <InputText id="edit-job-title" class="form-control" @bind-Value="editModel.JobTitle" />
                                <ValidationMessage For="() => editModel.JobTitle" />
                            </div>
                        </div>

                        <div class="ps-form-grid">
                            <div class="form-group">
                                <label for="edit-employment-type">Employment type</label>
                                <InputSelect id="edit-employment-type" class="form-select" @bind-Value="editModel.EmploymentType" TValue="EmploymentType">
                                    @foreach (var option in employmentTypeEditOptions)
                                    {
                                        <option value="@option.Value">@option.Label</option>
                                    }
                                </InputSelect>
                            </div>
                            <div class="form-group">
                                <label for="edit-start-date">Start date</label>
                                <InputDate id="edit-start-date" class="form-control" @bind-Value="editModel.StartDate" TValue="DateTime" />
                            </div>
                            <div class="form-group align-items-end">
                                <div class="form-check">
                                    <InputCheckbox id="edit-is-active" class="form-check-input" @bind-Value="editModel.IsActive" />
                                    <label class="form-check-label" for="edit-is-active">Active</label>
                                </div>
                            </div>
                        </div>

                        <div class="ps-form-grid">
                            <div class="form-group">
                                <label for="edit-password">New password <span class="ps-muted">(leave blank to keep current)</span></label>
                                <div class="input-with-button">
                                    <InputText id="edit-password" class="form-control" @bind-Value="editModel.NewPassword" type="@EditPasswordInputType" autocomplete="new-password" />
                                    <button type="button" class="btn btn-outline-secondary" @onclick="ToggleEditPassword" aria-label="Toggle password visibility">
                                        @(editPasswordVisible ? "Hide" : "Show")
                                    </button>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="edit-password-confirm">Confirm password</label>
                                <div class="input-with-button">
                                    <InputText id="edit-password-confirm" class="form-control" @bind-Value="editModel.ConfirmPassword" type="@EditConfirmPasswordInputType" autocomplete="new-password" />
                                    <button type="button" class="btn btn-outline-secondary" @onclick="ToggleEditConfirmPassword" aria-label="Toggle password confirmation visibility">
                                        @(editConfirmPasswordVisible ? "Hide" : "Show")
                                    </button>
                                </div>
                            </div>
                        </div>

                        <div class="ps-form-actions">
                            <button type="submit" class="btn btn-primary" disabled="@isEditSubmitting">
                                @(isEditSubmitting ? "Saving…" : "Save changes")
                            </button>
                            <button type="button" class="btn btn-outline-secondary" @onclick="CloseEditDialog" disabled="@isEditSubmitting">
                                Cancel
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [CascadingParameter]
    private Task<AuthenticationState>? AuthenticationStateTask { get; set; }

    private List<Employee>? employees;
    private AdminUserFormModel createModel = new();
    private EmployeeEditModel? editModel;
    private bool showAddEmployeeDialog;
    private bool showEditDialog;
    private bool isSubmitting;
    private bool isEditSubmitting;
    private bool _isAdmin;
    private bool createPasswordVisible;
    private bool editPasswordVisible;
    private bool editConfirmPasswordVisible;
    private string? pageSuccessMessage;
    private string? pageErrorMessage;
    private string? generatedPassword;
    private string? dialogError;
    private string? editError;

    private string CreatePasswordInputType => createPasswordVisible ? "text" : "password";
    private string EditPasswordInputType => editPasswordVisible ? "text" : "password";
    private string EditConfirmPasswordInputType => editConfirmPasswordVisible ? "text" : "password";

    private readonly string[] roleOptions = new[] { "Employee", "Admin" };

    private readonly (string Value, string Label)[] employmentTypeOptions = new[]
    {
        (EmploymentType.FullTime.ToString(), "Full-time"),
        (EmploymentType.PartTime.ToString(), "Part-time"),
        (EmploymentType.Contractor.ToString(), "Contractor"),
        (EmploymentType.Intern.ToString(), "Intern")
    };

    private readonly (EmploymentType Value, string Label)[] employmentTypeEditOptions = new[]
    {
        (EmploymentType.FullTime, "Full-time"),
        (EmploymentType.PartTime, "Part-time"),
        (EmploymentType.Contractor, "Contractor"),
        (EmploymentType.Intern, "Intern")
    };

    protected override async Task OnInitializedAsync()
    {
        ResetCreateForm();
        await DetermineAdminAsync();
        await LoadEmployeesAsync();
    }

    private async Task DetermineAdminAsync()
    {
        if (AuthenticationStateTask is null)
        {
            _isAdmin = false;
            return;
        }

        var authState = await AuthenticationStateTask;
        _isAdmin = authState.User.IsInRole("Admin");
    }

    private async Task LoadEmployeesAsync()
    {
        pageErrorMessage = null;

        try
        {
            employees = await EmployeeService.GetAllAsync();
        }
        catch
        {
            pageErrorMessage = "We couldn't load the employees right now. Please refresh to try again.";
            employees = new List<Employee>();
        }
    }

    private void OpenAddEmployeeDialog()
    {
        ResetCreateForm();
        dialogError = null;
        generatedPassword = null;
        showAddEmployeeDialog = true;
    }

    private void CloseAddEmployeeDialog()
    {
        showAddEmployeeDialog = false;
        isSubmitting = false;
        dialogError = null;
    }

    private void ToggleCreatePassword() => createPasswordVisible = !createPasswordVisible;

    private void ToggleEditPassword() => editPasswordVisible = !editPasswordVisible;

    private void ToggleEditConfirmPassword() => editConfirmPasswordVisible = !editConfirmPasswordVisible;

    private async Task HandleCreateEmployeeAsync()
    {
        if (isSubmitting)
        {
            return;
        }

        isSubmitting = true;
        dialogError = null;

        var createdName = $"{createModel.FirstName} {createModel.LastName}".Trim();
        var (success, errorMessage, password) = await UserService.CreateUserAsync(createModel);

        if (success)
        {
            pageSuccessMessage = string.IsNullOrWhiteSpace(createdName)
                ? "The employee was added successfully."
                : $"{createdName} was added successfully.";
            pageErrorMessage = null;
            generatedPassword = password;

            CloseAddEmployeeDialog();
            ResetCreateForm();
            await LoadEmployeesAsync();
        }
        else
        {
            dialogError = string.IsNullOrWhiteSpace(errorMessage)
                ? "Unable to create the employee. Please try again."
                : errorMessage;
        }

        isSubmitting = false;
    }

    private void ResetCreateForm()
        => createModel = new AdminUserFormModel
        {
            Role = roleOptions[0],
            EmploymentType = employmentTypeOptions[0].Value,
            StartDate = DateTime.Today
        };

    private async Task BeginEditAsync(int employeeId)
    {
        editError = null;
        editModel = null;

        var employee = await EmployeeService.GetByIdAsync(employeeId);
        if (employee is null)
        {
            pageErrorMessage = "We couldn't find that employee.";
            return;
        }

        editModel = new EmployeeEditModel
        {
            EmployeeId = employee.EmployeeId,
            FirstName = employee.User?.FirstName ?? string.Empty,
            LastName = employee.User?.LastName ?? string.Empty,
            Email = employee.User?.Email ?? string.Empty,
            Department = employee.Department ?? string.Empty,
            JobTitle = employee.JobTitle ?? string.Empty,
            EmploymentType = employee.EmploymentType,
            StartDate = (employee.StartDate ?? DateTime.Today).Date,
            IsActive = employee.IsActive,
            NewPassword = null,
            ConfirmPassword = null
        };

        showEditDialog = true;
    }

    private void CloseEditDialog()
    {
        showEditDialog = false;
        isEditSubmitting = false;
        editError = null;
        editModel = null;
    }

    private async Task SaveEditAsync()
    {
        if (editModel is null || isEditSubmitting)
        {
            return;
        }

        editError = null;

        var trimmedPassword = string.IsNullOrWhiteSpace(editModel.NewPassword)
            ? null
            : editModel.NewPassword.Trim();

        if (!string.IsNullOrEmpty(trimmedPassword) && trimmedPassword.Length < 6)
        {
            editError = "Passwords must be at least 6 characters long.";
            return;
        }

        if (editModel.StartDate < new DateTime(1970, 1, 1) || editModel.StartDate > DateTime.Today.AddYears(2))
        {
            editError = "Please choose a sensible start date.";
            return;
        }

        isEditSubmitting = true;

        try
        {
            var employee = await EmployeeService.GetByIdAsync(editModel.EmployeeId);
            if (employee is null)
            {
                editError = "We couldn't find that employee anymore.";
                isEditSubmitting = false;
                return;
            }

            employee.Department = editModel.Department?.Trim();
            employee.JobTitle = editModel.JobTitle?.Trim();
            employee.EmploymentType = editModel.EmploymentType;
            employee.StartDate = editModel.StartDate;
            employee.IsActive = editModel.IsActive;

            if (employee.User is not null)
            {
                employee.User.FirstName = editModel.FirstName;
                employee.User.LastName = editModel.LastName;
                employee.User.Email = editModel.Email;
            }

            employee.FullName = $"{employee.User?.FirstName} {employee.User?.LastName}".Trim();

            await EmployeeService.UpdateAsync(employee, trimmedPassword);

            pageSuccessMessage = $"{employee.FullName} was updated successfully.";
            pageErrorMessage = null;

            await LoadEmployeesAsync();
            CloseEditDialog();
        }
        catch
        {
            editError = "We couldn't save the employee right now. Please try again.";
        }

        isEditSubmitting = false;
    }

    private static string FormatEmploymentType(EmploymentType type)
        => type switch
        {
            EmploymentType.FullTime => "Full-time",
            EmploymentType.PartTime => "Part-time",
            EmploymentType.Contractor => "Contractor",
            EmploymentType.Intern => "Intern",
            _ => type.ToString()
        };

    private void DismissAlert(bool dismissSuccess)
    {
        if (dismissSuccess)
        {
            pageSuccessMessage = null;
            generatedPassword = null;
        }
        else
        {
            pageErrorMessage = null;
        }
    }
}
