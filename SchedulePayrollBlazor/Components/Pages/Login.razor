@page "/"
@page "/login"
@layout AuthLayout
@attribute [AllowAnonymous]

@using System.ComponentModel.DataAnnotations
@inject SchedulePayrollBlazor.Services.AuthService AuthService
@inject NavigationManager Nav

<div class="ps-auth-container">
    <div class="ps-auth-card">
        <div class="ps-auth-header">
            <h2>Sign in to PaySync</h2>
            <p class="ps-subtitle">Enter your credentials to continue.</p>
        </div>

        <EditForm Model="model" OnValidSubmit="HandleLogin" FormName="LoginForm">
            <DataAnnotationsValidator />

            <div class="mb-3">
                <label for="login-email" class="form-label">Email address</label>
                <InputText id="login-email" @bind-Value="model.Email" type="email" class="form-control" placeholder="you@example.com" />
                <ValidationMessage For="() => model.Email" />
            </div>

            <div class="mb-3">
                <label for="login-password" class="form-label">Password</label>
                <div class="input-with-button">
                    <InputText id="login-password" @bind-Value="model.Password" type="@PasswordInputType" class="form-control" placeholder="••••••••" />
                    <button type="button" class="btn btn-outline-secondary" @onclick="TogglePasswordVisibility" aria-label="Toggle password visibility">
                        @(showPassword ? "Hide" : "Show")
                    </button>
                </div>
                <ValidationMessage For="() => model.Password" />
            </div>

            @if (!string.IsNullOrWhiteSpace(errorMessage))
            {
                <div class="alert alert-danger" role="alert">@errorMessage</div>
            }

            <button type="submit" class="btn btn-primary w-100" disabled="@isLoading">
                @if (isLoading)
                {
                    <span>Signing in…</span>
                }
                else
                {
                    <span>Sign in</span>
                }
            </button>
        </EditForm>

        <p class="ps-subtitle">PaySync access is managed by your administrator.</p>
    </div>
</div>

@code {
    private readonly LoginModel model = new();
    private string errorMessage = string.Empty;
    private bool isLoading;
    private bool showPassword;

    private string PasswordInputType => showPassword ? "text" : "password";

    private async Task HandleLogin()
    {
        errorMessage = string.Empty;
        isLoading = true;

        try
        {
            var (success, message, role) = await AuthService.LoginAsync(model.Email, model.Password);

            if (!success)
            {
                errorMessage = string.IsNullOrWhiteSpace(message)
                    ? "Login failed. Please check your credentials."
                    : message;
                return;
            }

            var destination = string.Equals(role, "Admin", StringComparison.OrdinalIgnoreCase)
                ? "/admindashboard"
                : "/userdashboard";

            Nav.NavigateTo(destination, forceLoad: true);
        }
        catch (Exception ex)
        {
            errorMessage = $"Unexpected error during login: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void TogglePasswordVisibility()
    {
        showPassword = !showPassword;
    }

    private sealed class LoginModel
    {
        [Required]
        [EmailAddress]
        public string Email { get; set; } = string.Empty;

        [Required]
        [MinLength(6)]
        public string Password { get; set; } = string.Empty;
    }
}
