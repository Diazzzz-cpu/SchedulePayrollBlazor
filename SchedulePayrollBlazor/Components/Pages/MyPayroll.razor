@page "/my-payroll"
@attribute [Authorize]
@inject AppDbContext Db
@inject AuthenticationStateProvider AuthStateProvider
@using Microsoft.EntityFrameworkCore
@using SchedulePayrollBlazor.Data.Models
@using System.Security.Claims

<div class="page-container">
    <div class="page-header">
        <h2>My Payroll</h2>
        <p>View your payroll information</p>
    </div>

    @if (payrollRuns == null)
    {
        <div class="loading">Loading...</div>
    }
    else if (!payrollRuns.Any())
    {
        <div class="alert alert-info">No payroll records found.</div>
    }
    else
    {
        <div class="payroll-summary">
            <div class="summary-card">
                <h4>Total Earnings (All Time)</h4>
                <h2>$@totalEarnings.ToString("N2")</h2>
            </div>
            <div class="summary-card">
                <h4>Last Paycheck</h4>
                <h2>$@lastPaycheck.ToString("N2")</h2>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Pay Period</th>
                        <th>Gross Pay</th>
                        <th>Deductions</th>
                        <th>Net Pay</th>
                        <th>Status</th>
                        <th>Details</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var run in payrollRuns)
                    {
                        <tr>
                            <td>
                                @if (run.PayPeriod != null)
                                {
                                    <div>@run.PayPeriod.PeriodName</div>
                                    <small class="text-muted">
                                        @run.PayPeriod.StartDate.ToString("MMM dd") - @run.PayPeriod.EndDate.ToString("MMM dd, yyyy")
                                    </small>
                                }
                            </td>
                            <td class="text-success">$@run.GrossPay?.ToString("N2")</td>
                            <td class="text-danger">$@run.TotalDeductions?.ToString("N2")</td>
                            <td><strong>$@run.NetPay?.ToString("N2")</strong></td>
                            <td>
                                <span class="badge @GetStatusBadgeClass(run.Status)">
                                    @run.Status
                                </span>
                            </td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary" @onclick="() => ToggleDetails(run.PayrollRunId)">
                                    @(expandedRunId == run.PayrollRunId ? "Hide" : "View")
                                </button>
                            </td>
                        </tr>
                        @if (expandedRunId == run.PayrollRunId && run.Payrolllines.Any())
                        {
                            <tr>
                                <td colspan="6">
                                    <div class="payroll-details">
                                        <h5>Payroll Details</h5>
                                        <table class="table table-sm">
                                            <thead>
                                                <tr>
                                                    <th>Component</th>
                                                    <th>Type</th>
                                                    <th>Quantity</th>
                                                    <th>Rate</th>
                                                    <th>Amount</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var line in run.Payrolllines)
                                                {
                                                    <tr>
                                                        <td>@line.PayComponent?.Name</td>
                                                        <td>
                                                            <span class="badge @(line.PayComponent?.Kind == "Earning" ? "badge-success" : "badge-warning")">
                                                                @line.PayComponent?.Kind
                                                            </span>
                                                        </td>
                                                        <td>@line.Quantity?.ToString("F2")</td>
                                                        <td>$@line.Rate?.ToString("N2")</td>
                                                        <td>$@line.Amount?.ToString("N2")</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@code {
    private int employeeId;
    private List<Payrollrun>? payrollRuns;
    private decimal totalEarnings;
    private decimal lastPaycheck;
    private int? expandedRunId;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        var empIdClaim = user.FindFirst(ClaimTypes.NameIdentifier)?.Value;
        
        if (int.TryParse(empIdClaim, out employeeId))
        {
            payrollRuns = await Db.Payrollruns
                .Include(p => p.PayPeriod)
                .Include(p => p.Payrolllines)
                    .ThenInclude(l => l.PayComponent)
                .Where(p => p.EmployeeId == employeeId)
                .OrderByDescending(p => p.PayrollRunId)
                .ToListAsync();

            totalEarnings = payrollRuns.Sum(p => p.NetPay ?? 0);
            lastPaycheck = payrollRuns.FirstOrDefault()?.NetPay ?? 0;
        }
    }

    private void ToggleDetails(int runId)
    {
        expandedRunId = expandedRunId == runId ? null : runId;
    }

    private string GetStatusBadgeClass(string? status)
    {
        return status switch
        {
            "Paid" => "badge-success",
            "Approved" => "badge-info",
            "Calculated" => "badge-warning",
            _ => "badge-secondary"
        };
    }
}
