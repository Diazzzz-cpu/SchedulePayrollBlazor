@page "/myschedule"
@attribute [Authorize(Roles = "Employee")]
@inject AppDbContext Db
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Nav
@using Microsoft.EntityFrameworkCore
@using SchedulePayrollBlazor.Data.Models
@using System.Security.Claims
@using System.Globalization

<div class="ps-page">
    <div class="ps-page-header">
        <div>
            <h2>My schedule</h2>
            <p class="ps-subtitle">View your upcoming shifts and plan ahead.</p>
        </div>
    </div>

    <section class="ps-card">
        <div class="ps-card-header">
            <h3>Select date</h3>
            <p class="ps-subtitle">Choose a day to focus your view.</p>
        </div>
        <div class="row g-3 align-items-end">
            <div class="col-sm-4 col-12">
                <label for="my-schedule-date" class="form-label">Date</label>
                <input id="my-schedule-date" class="form-control" type="date" value="@dateString" @onchange="OnDateChanged" />
            </div>
            <div class="col-auto">
                <button class="btn btn-outline-secondary" type="button" @onclick="LoadSchedules">Load</button>
            </div>
        </div>
    </section>

    @if (schedules == null)
    {
        <div class="ps-card">
            <div class="loading">Loading...</div>
        </div>
    }
    else if (!schedules.Any())
    {
        <div class="ps-card">
            <div class="text-muted">No schedules found for the selected date.</div>
        </div>
    }
    else
    {
        <section class="ps-card">
            <div class="ps-card-header">
                <h3>Upcoming shifts</h3>
                <p class="ps-subtitle">Shifts for the selected day or week.</p>
            </div>
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead>
                        <tr>
                            <th scope="col">Date</th>
                            <th scope="col">Start</th>
                            <th scope="col">End</th>
                            <th scope="col">Duration</th>
                            <th scope="col">Source</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var schedule in schedules)
                        {
                            <tr>
                                <td>@schedule.ShiftDate.ToString("dddd, MMM dd")</td>
                                <td>@((DateTime.Today + schedule.StartTime).ToString("hh\\:mm tt"))</td>
                                <td>@((DateTime.Today + schedule.EndTime).ToString("hh\\:mm tt"))</td>
                                <td>@((schedule.EndTime - schedule.StartTime).TotalHours.ToString("F1")) hrs</td>
                                <td>
                                    <span class="ps-badge @(schedule.Source == "Manual" ? "ps-badge-neutral" : "ps-badge-success")">
                                        @schedule.Source
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </section>
    }
</div>

@code {
    private int employeeId;
    private string dateString = DateTime.Today.ToString("yyyy-MM-dd");
    private List<Schedule>? schedules;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        var role = user.FindFirst(ClaimTypes.Role)?.Value;

        if (!string.Equals(role, "Employee", StringComparison.OrdinalIgnoreCase))
        {
            Nav.NavigateTo("/login", forceLoad: true);
            return;
        }

        var empIdClaim = user.FindFirst("EmployeeId")?.Value ?? user.FindFirst(ClaimTypes.NameIdentifier)?.Value;

        if (int.TryParse(empIdClaim, out employeeId))
        {
            await LoadSchedules();
        }
        else
        {
            Nav.NavigateTo("/login", forceLoad: true);
        }
    }

    private Task OnDateChanged(ChangeEventArgs e)
    {
        dateString = Convert.ToString(e.Value, CultureInfo.InvariantCulture) ?? dateString;
        return Task.CompletedTask;
    }

    private async Task LoadSchedules()
    {
        if (!DateTime.TryParseExact(dateString, "yyyy-MM-dd",
                CultureInfo.InvariantCulture, DateTimeStyles.None, out var date))
        {
            schedules = new();
            return;
        }

        var selectedDate = date.Date;

        schedules = await Db.Schedules
            .Where(s => s.EmployeeId == employeeId && s.ShiftDate.Date == selectedDate)
            .OrderBy(s => s.StartTime)
            .ToListAsync();

        if (!schedules.Any())
        {
            var startOfWeek = selectedDate.AddDays(-(int)selectedDate.DayOfWeek);
            var endOfWeek = startOfWeek.AddDays(7);

            schedules = await Db.Schedules
                .Where(s =>
                    s.EmployeeId == employeeId &&
                    s.ShiftDate.Date >= startOfWeek &&
                    s.ShiftDate.Date < endOfWeek)
                .OrderBy(s => s.ShiftDate)
                .ThenBy(s => s.StartTime)
                .ToListAsync();
        }
    }
}
