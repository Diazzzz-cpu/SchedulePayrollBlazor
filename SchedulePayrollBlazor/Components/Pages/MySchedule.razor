@page "/myschedule"
@attribute [Authorize(Roles = "Employee")]
@inject AppDbContext Db
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Nav
@using Microsoft.EntityFrameworkCore
@using SchedulePayrollBlazor.Data.Models
@using System.Security.Claims
@using System.Globalization

<div class="page">
    <header class="page-header">
        <div>
            <h1 class="page-title">My Schedule</h1>
            <p class="page-subtitle">View your upcoming shifts and plan ahead.</p>
        </div>
    </header>

    <section class="filter-bar">
        <div class="form-group">
            <label>Select Date</label>
            <input type="date" value="@dateString" @onchange="OnDateChanged" />
        </div>
        <div class="form-actions">
            <button class="btn btn-secondary" @onclick="LoadSchedules">Load</button>
        </div>
    </section>

    @if (schedules == null)
    {
        <div class="content-card">
            <div class="loading">Loading...</div>
        </div>
    }
    else if (!schedules.Any())
    {
        <div class="content-card">
            <div class="alert alert-info">No schedules found for the selected date.</div>
        </div>
    }
    else
    {
        <section class="schedule-grid">
            @foreach (var schedule in schedules)
            {
                <article class="schedule-card">
                    <div class="schedule-date">
                        <div class="date-day">@schedule.ShiftDate.Day</div>
                        <div class="date-month">@schedule.ShiftDate.ToString("MMM")</div>
                    </div>
                    <div class="schedule-details">
                        <h4>@schedule.ShiftDate.ToString("dddd, MMMM dd, yyyy")</h4>
                        <div class="schedule-time">
                            <span class="time-badge">@((DateTime.Today + schedule.StartTime).ToString("hh\\:mm tt"))</span>
                            <span class="time-separator">â†’</span>
                            <span class="time-badge">@((DateTime.Today + schedule.EndTime).ToString("hh\\:mm tt"))</span>
                        </div>
                        <div class="schedule-duration">
                            Duration: @((schedule.EndTime - schedule.StartTime).TotalHours.ToString("F1")) hours
                        </div>
                        <div class="schedule-source">
                            <span class="badge @(schedule.Source == "Manual" ? "badge-primary" : "badge-secondary")">
                                @schedule.Source
                            </span>
                        </div>
                    </div>
                </article>
            }
        </section>
    }
</div>

@code {
    private int employeeId;
    private string dateString = DateTime.Today.ToString("yyyy-MM-dd");
    private List<Schedule>? schedules;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        var role = user.FindFirst(ClaimTypes.Role)?.Value;

        if (!string.Equals(role, "Employee", StringComparison.OrdinalIgnoreCase))
        {
            Nav.NavigateTo("/login", forceLoad: true);
            return;
        }

        var empIdClaim = user.FindFirst("EmployeeId")?.Value ?? user.FindFirst(ClaimTypes.NameIdentifier)?.Value;

        if (int.TryParse(empIdClaim, out employeeId))
        {
            await LoadSchedules();
        }
        else
        {
            Nav.NavigateTo("/login", forceLoad: true);
        }
    }

    private Task OnDateChanged(ChangeEventArgs e)
    {
        dateString = Convert.ToString(e.Value, CultureInfo.InvariantCulture) ?? dateString;
        return Task.CompletedTask;
    }

    private async Task LoadSchedules()
    {
        // Try to parse the date as DateTime
        if (!DateTime.TryParseExact(dateString, "yyyy-MM-dd",
                CultureInfo.InvariantCulture, DateTimeStyles.None, out var date))
        {
            schedules = new();
            return;
        }

        var selectedDate = date.Date;

        // Get schedules for the chosen day
        schedules = await Db.Schedules
            .Where(s => s.EmployeeId == employeeId && s.ShiftDate.Date == selectedDate)
            .OrderBy(s => s.StartTime)
            .ToListAsync();

        // If no schedules for the day, show the entire week
        if (!schedules.Any())
        {
            var startOfWeek = selectedDate.AddDays(-(int)selectedDate.DayOfWeek);
            var endOfWeek = startOfWeek.AddDays(7);

            schedules = await Db.Schedules
                .Where(s =>
                    s.EmployeeId == employeeId &&
                    s.ShiftDate.Date >= startOfWeek &&
                    s.ShiftDate.Date < endOfWeek)
                .OrderBy(s => s.ShiftDate)
                .ThenBy(s => s.StartTime)
                .ToListAsync();
        }
    }
}
