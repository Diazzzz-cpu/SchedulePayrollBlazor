@page "/profile"
@attribute [Authorize]
@using System.Security.Claims
@using Microsoft.EntityFrameworkCore
@inject SimpleAuthStateProvider AuthProvider
@inject AuthenticationStateProvider AuthStateProvider
@inject AppDbContext Db
@inject NavigationManager Nav

@if (profile is null)
{
    <div class="ps-card">
        <div class="loading">Loading profile...</div>
    </div>
}
else
{
    <div class="ps-page">
        <div class="ps-page-header mb-4">
            <div>
                <h2>My profile</h2>
                <p class="ps-subtitle">View your account details and keep your contact information up to date.</p>
            </div>
        </div>

        <!-- Row 1: Account + Employment, equal gap below -->
        <div class="row g-3 mb-4">
            <div class="col-12 col-lg-6">
                <div class="ps-card h-100">
                    <div class="ps-card-header">
                        <h3>Account information</h3>
                    </div>
                    <dl class="ps-description-list">
                        <dt>Name</dt>
                        <dd>@profile.FullName</dd>

                        <dt>Email</dt>
                        <dd>@profile.Email</dd>

                        <dt>Role</dt>
                        <dd>@profile.Role</dd>

                        <dt>Member since</dt>
                        <dd>@profile.CreatedAt.ToString("MMM dd, yyyy")</dd>
                    </dl>
                </div>
            </div>

            <div class="col-12 col-lg-6">
                <div class="ps-card h-100">
                    <div class="ps-card-header">
                        <h3>Employment details</h3>
                    </div>
                    <dl class="ps-description-list">
                        <dt>Job title</dt>
                        <dd>@DisplayOrFallback(profile.JobTitle)</dd>

                        <dt>Department</dt>
                        <dd>@DisplayOrFallback(profile.Department)</dd>

                        <dt>Employment type</dt>
                        <dd>@DisplayOrFallback(profile.EmploymentType)</dd>

                        <dt>Start date</dt>
                        <dd>
                            @(
                                                    profile.StartDate.HasValue
                                                    ? profile.StartDate.Value.ToString("MMM dd, yyyy")
                                                    : "-"
                                                    )
                    </dd>

                        <dt>Location</dt>
                        <dd>@DisplayOrFallback(profile.Location)</dd>
                    </dl>
                </div>
            </div>
        </div>

        <!-- Row 2: Contact & personal info, cleaner grid + extra spacing -->
        <div class="row g-3 mt-4">
            <div class="col-12 col-lg-8">
                <div class="ps-card">
                    <div class="ps-card-header">
                        <h3>Contact &amp; Personal info</h3>
                        <p class="ps-subtitle">
                            Only your admin can see this information in the employee record.
                        </p>
                    </div>

                @if (!string.IsNullOrWhiteSpace(saveSuccessMessage))
                    {
                        <div class="ps-alert ps-alert-success" role="status">
                            @saveSuccessMessage
                        </div>
                    }

                    @if (!string.IsNullOrWhiteSpace(saveErrorMessage))
                    {
                        <div class="ps-alert ps-alert-danger" role="alert">
                            @saveErrorMessage
                        </div>
                    }

                    @if (canEditProfile)
                    {
                        <EditForm Model="editModel" OnValidSubmit="SaveProfileAsync">
                            <DataAnnotationsValidator />
                            <ValidationSummary />

                            <div class="ps-card-body">
                                <div class="row g-3 align-items-start">

                                    <!-- Phone -->
                                    <div class="col-12 col-md-4">
                                        <label class="ps-label" for="profile-phone">Phone</label>
                                        <InputText id="profile-phone"
                                                   class="ps-input w-100"
                                                   @bind-Value="editModel.Phone" />
                                    </div>

                                    <!-- Birthdate -->
                                    <div class="col-12 col-md-4">
                                        <label class="ps-label" for="profile-birthdate">Birthdate</label>
                                        <InputDate @bind-Value="editModel.BirthDate"
                                                   id="profile-birthdate"
                                                   class="ps-input w-100" />
                                    </div>

                                    <!-- Address ABOVE the input (aligned with Phone + Birthdate labels) -->
                                    <div class="col-12 col-md-4">
                                        <label class="ps-label" for="profile-address">Address</label>
                                        <InputTextArea id="profile-address"
                                                       class="ps-input w-100"
                                                       rows="1"
                                                       @bind-Value="editModel.Address" />
                                    </div>

                                </div>
                            </div>

                            <div class="ps-card-footer">
                                <button type="submit"
                                        class="ps-button ps-button-primary"
                                        disabled="@isSaving">
                                    @(isSaving ? "Saving…" : "Save changes")
                                </button>
                            </div>
                        </EditForm>
                    }
                    else
                    {
                        <div class="ps-card-body">
                            <p class="text-muted">
                                This account is not linked to an employee record yet, so contact information
                                cannot be edited.
                            </p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}

@code {
    private ProfileViewModel? profile;

    private ProfileEditModel editModel = new();
    private bool canEditProfile;
    private bool isSaving;
    private string? saveSuccessMessage;
    private string? saveErrorMessage;
    private int? employeeId;
    private int userId;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var userPrincipal = authState.User;

        if (!(userPrincipal.Identity?.IsAuthenticated ?? false))
        {
            Nav.NavigateTo("/login", forceLoad: true);
            return;
        }

        var idValue = userPrincipal.FindFirst(ClaimTypes.NameIdentifier)?.Value;
        if (!int.TryParse(idValue, out var parsedUserId))
        {
            await AuthProvider.SignOutAsync();
            Nav.NavigateTo("/login", forceLoad: true);
            return;
        }

        userId = parsedUserId;

        var user = await Db.Users
            .Include(u => u.Employee)
            .Include(u => u.Role)
            .FirstOrDefaultAsync(u => u.UserId == userId);

        if (user is null)
        {
            await AuthProvider.SignOutAsync();
            Nav.NavigateTo("/login", forceLoad: true);
            return;
        }

        var roleLabel = string.IsNullOrWhiteSpace(user.Role?.Name)
            ? "Employee"
            : user.Role!.Name;

        string fullName =
            user.Employee?.FullName ??
            $"{user.FirstName} {user.LastName}".Trim();

        if (string.IsNullOrWhiteSpace(fullName))
            fullName = user.Email;

        profile = new ProfileViewModel
        {
            FullName = fullName,
            Email = user.Email,
            Role = roleLabel,
            CreatedAt = user.CreatedAt,
            Department = user.Employee?.Department ?? string.Empty,
            JobTitle = user.Employee?.JobTitle ?? string.Empty,
            EmploymentType = user.Employee is null
                ? string.Empty
                : FormatEmploymentType(user.Employee.EmploymentType),
            StartDate = user.Employee?.StartDate,
            Location = user.Employee?.Location ?? string.Empty
        };

        if (user.Employee is not null)
        {
            employeeId = user.Employee.EmployeeId;
            canEditProfile = true;

            var ep = await Db.EmployeeProfiles
                .FirstOrDefaultAsync(p => p.EmployeeId == employeeId.Value);

            if (ep is not null)
            {
                editModel = new ProfileEditModel
                {
                    Phone = ep.Phone ?? string.Empty,
                    BirthDate = ep.BirthDate,
                    Address = ep.Address ?? string.Empty
                };
            }
            else
            {
                editModel = new ProfileEditModel();
            }
        }
        else
        {
            canEditProfile = false;
            employeeId = null;
        }
    }

    private async Task SaveProfileAsync()
    {
        saveSuccessMessage = null;
        saveErrorMessage = null;

        if (!canEditProfile || !employeeId.HasValue)
        {
            saveErrorMessage = "Your account is not linked to an employee record.";
            return;
        }

        isSaving = true;
        try
        {
            var ep = await Db.EmployeeProfiles
                .FirstOrDefaultAsync(p => p.EmployeeId == employeeId.Value);

            if (ep is null)
            {
                ep = new EmployeeProfile
                {
                    EmployeeId = employeeId.Value,
                    UserId = userId
                };
                Db.EmployeeProfiles.Add(ep);
            }

            ep.Phone = string.IsNullOrWhiteSpace(editModel.Phone)
                ? null
                : editModel.Phone.Trim();

            ep.BirthDate = editModel.BirthDate;

            ep.Address = string.IsNullOrWhiteSpace(editModel.Address)
                ? null
                : editModel.Address.Trim();

            await Db.SaveChangesAsync();

            saveSuccessMessage = "Your profile has been updated.";
        }
        catch
        {
            saveErrorMessage = "Something went wrong while saving your profile. Please try again.";
        }
        finally
        {
            isSaving = false;
            StateHasChanged();
        }
    }

    private static string DisplayOrFallback(string value)
        => string.IsNullOrWhiteSpace(value) ? "-" : value;

    private static string FormatEmploymentType(EmploymentType type)
        => type switch
        {
            EmploymentType.FullTime => "Full-time",
            EmploymentType.PartTime => "Part-time",
            EmploymentType.Contractor => "Contractor",
            EmploymentType.Intern => "Intern",
            _ => type.ToString()
        };

    private sealed class ProfileViewModel
    {
        public string FullName { get; set; } = string.Empty;
        public string Email { get; set; } = string.Empty;
        public string Role { get; set; } = string.Empty;
        public DateTime CreatedAt { get; set; }
        public string Department { get; set; } = string.Empty;
        public string JobTitle { get; set; } = string.Empty;
        public string EmploymentType { get; set; } = string.Empty;
        public DateTime? StartDate { get; set; }
        public string Location { get; set; } = string.Empty;
    }

    private sealed class ProfileEditModel
    {
        public string? Phone { get; set; }
        public DateTime? BirthDate { get; set; }
        public string? Address { get; set; }
    }
}
