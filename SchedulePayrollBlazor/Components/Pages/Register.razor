@page "/register"
@inject AuthService AuthService
@inject NavigationManager Nav
@using SchedulePayrollBlazor.Services.Models
@using System.ComponentModel.DataAnnotations

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h2>Create your SchedulePayroll account</h2>
            <p>Invite teammates and manage payroll in one place</p>
        </div>

        <EditForm Model="model" OnValidSubmit="HandleRegister" FormName="RegisterForm">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="form-row">
                <div class="form-group">
                    <label>First Name</label>
                    <InputText @bind-Value="model.FirstName" class="form-control" />
                    <ValidationMessage For="() => model.FirstName" />
                </div>
                <div class="form-group">
                    <label>Last Name</label>
                    <InputText @bind-Value="model.LastName" class="form-control" />
                    <ValidationMessage For="() => model.LastName" />
                </div>
            </div>

            <div class="form-group">
                <label>Email Address</label>
                <InputText @bind-Value="model.Email" class="form-control" type="email" placeholder="you@example.com" />
                <ValidationMessage For="() => model.Email" />
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label>Password</label>
                    <InputText @bind-Value="model.Password" class="form-control" type="password" />
                    <ValidationMessage For="() => model.Password" />
                </div>
                <div class="form-group">
                    <label>Confirm Password</label>
                    <InputText @bind-Value="confirmPassword" class="form-control" type="password" />
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label>Role</label>
                    <InputSelect @bind-Value="model.Role" class="form-control">
                        <option value="Employee">Employee</option>
                        <option value="Admin">Admin</option>
                    </InputSelect>
                    <ValidationMessage For="() => model.Role" />
                </div>
                <div class="form-group">
                    <label>Employment Type</label>
                    <InputSelect @bind-Value="model.EmploymentType" class="form-control">
                        <option value="FullTime">Full Time</option>
                        <option value="PartTime">Part Time</option>
                        <option value="Contract">Contract</option>
                    </InputSelect>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label>Department</label>
                    <InputText @bind-Value="model.Department" class="form-control" />
                    <ValidationMessage For="() => model.Department" />
                </div>
                <div class="form-group">
                    <label>Job Title</label>
                    <InputText @bind-Value="model.JobTitle" class="form-control" />
                    <ValidationMessage For="() => model.JobTitle" />
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label>Start Date</label>
                    <InputDate @bind-Value="model.StartDate" class="form-control" />
                    <ValidationMessage For="() => model.StartDate" />
                </div>
                <div class="form-group">
                    <label>Location</label>
                    <InputText @bind-Value="model.Location" class="form-control" />
                    <ValidationMessage For="() => model.Location" />
                </div>
            </div>

            @if (!string.IsNullOrWhiteSpace(errorMessage))
            {
                <div class="alert alert-danger">@errorMessage</div>
            }

            <button type="submit" class="btn btn-primary btn-block" disabled="@isLoading">
                @if (isLoading)
                {
                    <span>Creating Account...</span>
                }
                else
                {
                    <span>Create Account</span>
                }
            </button>
        </EditForm>

        <div class="auth-footer">
            <p>Already have an account? <a href="/login">Sign in</a></p>
        </div>
    </div>
</div>

@code {
    private readonly RegisterRequest model = new()
    {
        StartDate = DateTime.Today
    };

    private string confirmPassword = string.Empty;
    private string errorMessage = string.Empty;
    private bool isLoading;

    private async Task HandleRegister()
    {
        errorMessage = string.Empty;

        if (!string.Equals(model.Password, confirmPassword, StringComparison.Ordinal))
        {
            errorMessage = "Passwords do not match.";
            return;
        }

        isLoading = true;
        var (success, message) = await AuthService.RegisterAsync(model);
        isLoading = false;

        if (!success)
        {
            errorMessage = message;
            return;
        }

        var destination = string.Equals(model.Role, "Admin", StringComparison.OrdinalIgnoreCase)
            ? "/admindashboard"
            : "/userdashboard";

        Nav.NavigateTo(destination, forceLoad: true);
    }
}
