@page "/schedules"
@attribute [Authorize(Roles = "Admin")]
@inject AppDbContext Db
@inject NavigationManager Nav
@using Microsoft.EntityFrameworkCore
@using System.Globalization
@using SchedulePayrollBlazor.Data.Models

<div class="ps-page">
    <div class="ps-page-header">
        <div>
            <h2>Schedules</h2>
            <p class="ps-subtitle">Review and manage upcoming shift assignments.</p>
        </div>
        <div class="ps-page-actions">
            <a class="btn btn-primary" href="/schedules/new">Add schedule</a>
        </div>
    </div>

    <section class="ps-card">
        <div class="ps-card-header">
            <h3>Filter by date</h3>
            <p class="ps-subtitle">Choose a day to view matching shifts.</p>
        </div>
        <div class="row g-3 align-items-end">
            <div class="col-sm-4 col-12">
                <label for="schedule-date" class="form-label">Schedule date</label>
                <input id="schedule-date" class="form-control" type="date" value="@dateString" @onchange="OnDateChanged" />
            </div>
            <div class="col-auto">
                <button class="btn btn-outline-secondary" type="button" @onclick="() => Load()">Load</button>
            </div>
        </div>
    </section>

    @if (items is null)
    {
        <div class="ps-card">
            <div class="loading">Loading...</div>
        </div>
    }
    else if (items.Count == 0)
    {
        <div class="ps-card">
            <div class="text-muted">No schedules found for the selected date.</div>
        </div>
    }
    else
    {
        <section class="ps-card">
            <div class="ps-card-header">
                <h3>Shift overview</h3>
                <p class="ps-subtitle">Found <strong>@items.Count</strong> schedule(s) for @dateString.</p>
            </div>
            <div class="ps-table-container">
                <table class="ps-table">
                    <thead>
                        <tr>
                            <th scope="col">Employee</th>
                            <th scope="col">Start</th>
                            <th scope="col">End</th>
                            <th scope="col">Source</th>
                            <th scope="col">Date</th>
                            <th scope="col" data-align="center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var s in items)
                        {
                            <tr>
                                <td>@s.Employee.FullName</td>
                                <td>@s.StartTime.ToString("hh\\:mm")</td>
                                <td>@s.EndTime.ToString("hh\\:mm")</td>
                                <td>@s.Source</td>
                                <td>@s.ShiftDate.ToString("yyyy-MM-dd")</td>
                                <td data-align="center">
                                    <div class="d-inline-flex gap-2">
                                        <a class="btn btn-outline-secondary btn-sm" href="/schedules/edit/@s.ScheduleId">Edit</a>
                                        <button type="button" class="btn btn-outline-secondary btn-sm" @onclick="() => DeleteSchedule(s.ScheduleId)">Delete</button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </section>
    }
</div>

@code {
    private string dateString = DateTime.Today.ToString("yyyy-MM-dd");
    private List<Schedule>? items;

    protected override Task OnInitializedAsync() => Load();

    private Task OnDateChanged(ChangeEventArgs e)
    {
        dateString = Convert.ToString(e.Value, CultureInfo.InvariantCulture) ?? dateString;
        return Task.CompletedTask;
    }

    private async Task Load()
    {
        if (!DateTime.TryParseExact(
                dateString,
                "yyyy-MM-dd",
                CultureInfo.InvariantCulture,
                DateTimeStyles.None,
                out var date))
        {
            items = new();
            return;
        }

        var selectedDate = date.Date;

        items = await Db.Schedules
            .Include(s => s.Employee)
                .ThenInclude(e => e.User)
            .Where(s => s.ShiftDate.Date == selectedDate)
            .OrderBy(s => s.StartTime)
            .ToListAsync();

        if (items.Count == 0)
        {
            items = await Db.Schedules
                .Include(s => s.Employee)
                    .ThenInclude(e => e.User)
                .OrderByDescending(s => s.ShiftDate)
                .ThenBy(s => s.StartTime)
                .Take(10)
                .ToListAsync();
        }
    }

    private async Task DeleteSchedule(int scheduleId)
    {
        var entity = await Db.Schedules.FindAsync(scheduleId);
        if (entity is not null)
        {
            Db.Remove(entity);
            await Db.SaveChangesAsync();
            await Load();
        }
    }
}
