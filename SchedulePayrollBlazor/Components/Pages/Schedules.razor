@page "/schedules"
@attribute [Authorize(Roles = "Admin")]
@inject AppDbContext Db
@inject NavigationManager Nav
@using Microsoft.EntityFrameworkCore
@using System.Globalization
@using SchedulePayrollBlazor.Data.Models

<div class="page">
    <header class="page-header">
        <div>
            <h1 class="page-title">Schedules</h1>
            <p class="page-subtitle">Review and manage upcoming shift assignments.</p>
        </div>
        <div class="page-actions">
            <a class="btn btn-primary" href="/schedules/new">+ Add Schedule</a>
        </div>
    </header>

    <section class="filter-bar">
        <div class="form-group">
            <label>Schedule Date</label>
            <input type="date" value="@dateString" @onchange="OnDateChanged" />
        </div>
        <div class="form-actions">
            <button class="btn btn-secondary" @onclick="() => Load()">Load</button>
        </div>
    </section>

    @if (items is null)
    {
        <div class="content-card">
            <div class="loading">Loading...</div>
        </div>
    }
    else if (items.Count == 0)
    {
        <div class="content-card">
            <div class="alert alert-info">No schedules found for the selected date.</div>
        </div>
    }
    else
    {
        <section class="content-card">
            <div class="card-header">
                <h3>Shift Overview</h3>
                <p>Found <strong>@items.Count</strong> schedule(s) for @dateString.</p>
            </div>
            <div class="table-responsive">
                <table>
                    <thead>
                        <tr>
                            <th>Employee</th>
                            <th>Start</th>
                            <th>End</th>
                            <th>Source</th>
                            <th>Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var s in items)
                        {
                            <tr>
                                <td>@s.Employee.FullName</td>
                                <td>@s.StartTime.ToString("hh\\:mm")</td>
                                <td>@s.EndTime.ToString("hh\\:mm")</td>
                                <td>@s.Source</td>
                                <td>@s.ShiftDate.ToString("yyyy-MM-dd")</td>
                                <td class="table-actions">
                                    <a class="btn btn-outline" href="/schedules/edit/@s.ScheduleId">Edit</a>
                                    <button type="button" class="btn btn-outline" @onclick="() => DeleteSchedule(s.ScheduleId)">Delete</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </section>
    }
</div>

@code {
    private string dateString = DateTime.Today.ToString("yyyy-MM-dd");
    private List<Schedule>? items;

    protected override Task OnInitializedAsync() => Load();

    private Task OnDateChanged(ChangeEventArgs e)
    {
        dateString = Convert.ToString(e.Value, CultureInfo.InvariantCulture) ?? dateString;
        return Task.CompletedTask;
    }

    private async Task Load()
    {
        // Parse as DateTime, not DateOnly
        if (!DateTime.TryParseExact(
                dateString,
                "yyyy-MM-dd",
                CultureInfo.InvariantCulture,
                DateTimeStyles.None,
                out var date))
        {
            items = new();
            return;
        }

        var selectedDate = date.Date;

        items = await Db.Schedules
            .Include(s => s.Employee)
                .ThenInclude(e => e.User)
            .Where(s => s.ShiftDate.Date == selectedDate)
            .OrderBy(s => s.StartTime)
            .ToListAsync();

        if (items.Count == 0)
        {
            items = await Db.Schedules
                .Include(s => s.Employee)
                    .ThenInclude(e => e.User)
                .OrderByDescending(s => s.ShiftDate)
                .ThenBy(s => s.StartTime)
                .Take(10)
                .ToListAsync();
        }
    }

    private async Task DeleteSchedule(int scheduleId)
    {
        var entity = await Db.Schedules.FindAsync(scheduleId);
        if (entity is not null)
        {
            Db.Remove(entity);
            await Db.SaveChangesAsync();
            await Load();
        }
    }
}
