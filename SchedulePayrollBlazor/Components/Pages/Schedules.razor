@page "/schedules"
@attribute [Authorize(Roles = "Admin")]
@inject AppDbContext Db
@inject NavigationManager Nav
@using Microsoft.EntityFrameworkCore
@using System.Globalization
@using SchedulePayrollBlazor.Data.Models

<h3>Schedules (@dateString)</h3>

<div class="d-flex align-items-center mb-3">
    <input type="date" class="form-control w-auto me-2"
           value="@dateString"
           @onchange="OnDateChanged" />
    <button class="btn btn-secondary me-2" @onclick="() => Load()">Load</button>
    <a class="btn btn-primary" href="/schedules/new">+ Add Schedule</a>
</div>

@if (items is null)
{
    <p><em>Loading...</em></p>
}
else if (items.Count == 0)
{
    <div class="alert alert-info">No schedules found for the selected date.</div>
}
else
{
    <p>Found <strong>@items.Count</strong> schedule(s).</p>

    <table class="table table-bordered table-striped">
        <thead class="table-light">
            <tr>
                <th>Employee</th>
                <th>Start</th>
                <th>End</th>
                <th>Source</th>
                <th>Date</th>
                <th style="width: 120px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in items)
            {
                <tr>
                    <td>@s.Employee.FullName</td>
                    <td>@s.StartTime.ToString("HH\\:mm")</td>
                    <td>@s.EndTime.ToString("HH\\:mm")</td>
                    <td>@s.Source</td>
                    <td>@s.ShiftDate.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a class="btn btn-sm btn-outline-primary me-1"
                           href="/schedules/edit/@s.Id">Edit</a>
                        <button class="btn btn-sm btn-outline-danger"
                                @onclick="() => DeleteSchedule(s.Id)">
                            Delete
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private string dateString = DateTime.Today.ToString("yyyy-MM-dd");
    private List<Schedule>? items;

    protected override Task OnInitializedAsync() => Load();

    private Task OnDateChanged(ChangeEventArgs e)
    {
        dateString = Convert.ToString(e.Value, CultureInfo.InvariantCulture) ?? dateString;
        return Task.CompletedTask;
    }

    private async Task Load()
    {
        if (!DateOnly.TryParseExact(dateString, "yyyy-MM-dd", CultureInfo.InvariantCulture,
                                    DateTimeStyles.None, out var date))
        {
            items = new();
            return;
        }

        items = await Db.Schedules
            .Include(s => s.Employee)
                .ThenInclude(e => e.User)
            .Where(s => s.ShiftDate == date)
            .OrderBy(s => s.StartTime)
            .ToListAsync();

        if (items.Count == 0)
        {
            items = await Db.Schedules
                .Include(s => s.Employee)
                    .ThenInclude(e => e.User)
                .OrderByDescending(s => s.ShiftDate)
                .ThenBy(s => s.StartTime)
                .Take(10)
                .ToListAsync();
        }
    }

    private async Task DeleteSchedule(int id)
    {
        var entity = await Db.Schedules.FindAsync(id);
        if (entity is not null)
        {
            Db.Remove(entity);
            await Db.SaveChangesAsync();
            await Load();
        }
    }
}
